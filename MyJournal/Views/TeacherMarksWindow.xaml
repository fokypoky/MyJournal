<Window x:Class="MyJournal.Views.TeacherMarksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyJournal.Views"
        xmlns:ef="clr-namespace:MyJournalLibrary.Entities;assembly=MyJournalLibrary"
        xmlns:vmodel="clr-namespace:MyJournal.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        MinHeight="450" MinWidth="800">
    <Window.DataContext>
        <vmodel:TeacherMarksWindowViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <DataTemplate x:Key="StudentColumnCellTemplate"
                      DataType="{x:Type ef:Mark}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Student.Contacts.Surname}"/>
                <TextBlock Text="{Binding Student.Contacts.Name}"
                           Margin="5, 0, 0, 0"/>
                <TextBlock Text="{Binding Student.Contacts.Midname}"
                           Margin="5, 0, 0, 0"/>
            </StackPanel>
        </DataTemplate>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Экспорт в excel"/>
            </MenuItem>
            <MenuItem Header="Отчеты">
                <MenuItem Header="Просмотр четверти"/>
                <MenuItem Header="Динамика успеваемости"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ComboBox MinWidth="100" Margin="5, 0,5,0" Background="#D9D9D9"
                      SelectedItem="{Binding SelectedYear}"
                      ItemsSource="{Binding MarkYears}"
            />
            <ComboBox MinWidth="100" Margin="5, 0, 0, 0" Background="#D9D9D9"
                      SelectedItem="{Binding SelectedMonth}"
                      ItemsSource="{Binding MarkMonths}"
                      />
        </StackPanel>
        
        <Grid Grid.Row="2">
            <DataGrid ItemsSource="{Binding Marks}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn 
                        CellTemplate="{StaticResource StudentColumnCellTemplate}"
                        Header="Ученики"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <Grid Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <Button MinWidth="150" Margin="5" BorderThickness="0"
                        Background="#D9D9D9"
                        Content="Сохранить изменения"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
